-# ＜サイドバー＞
.side_bar
  .side_bar__username
    .side_bar__username__topitem
      .side_bar__username__topitem__name
        = current_user.name
      .side_bar__username__topitem__icons
        = link_to new_group_path do
          = icon('fas','edit',class: 'icon')
          %span<>
        = link_to edit_user_path(current_user) do
          = icon('fas', 'cog', class: 'icon')

  .side_bar__grouplist
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do
          .group__name
            =group.name
          .group__message
            = group.show_last_message
 